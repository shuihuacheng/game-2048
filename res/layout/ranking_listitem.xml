<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/RankingListitem_rank"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/orange"
            android:textSize="30dp" >
        </TextView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <TextView
                android:id="@+id/RankingListitem_displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="张三"
                android:textColor="@color/txt_listitem_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/RankingListitem_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/RankingListitem_displayName"
                android:text="zhangshan"
                android:textColor="@color/txt_listitem_title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/RankingListitem_highestScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RankingListitem_displayName"
                android:layout_marginTop="4dp"
                android:text="108"
                android:textColor="@color/txt_listitem_content"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_border" />

</LinearLayout>