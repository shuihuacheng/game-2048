<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="@dimen/radius" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <solid android:color="@color/btn_click" />

            <padding android:bottom="0dp" android:left="@dimen/listitem_padding" android:right="@dimen/listitem_padding" android:top="0dp" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <corners android:bottomLeftRadius="@dimen/radius" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <solid android:color="@color/btn_click" />

            <padding android:bottom="0dp" android:left="@dimen/listitem_padding" android:right="@dimen/listitem_padding" android:top="0dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <corners android:bottomLeftRadius="@dimen/radius" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <solid android:color="@color/btn_disable" />

            <padding android:bottom="0dp" android:left="@dimen/listitem_padding" android:right="@dimen/listitem_padding" android:top="0dp" />
        </shape></item>
    <item><shape>
            <corners android:bottomLeftRadius="@dimen/radius" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />

            <solid android:color="@color/btn_enable" />

            <padding android:bottom="0dp" android:left="@dimen/listitem_padding" android:right="@dimen/listitem_padding" android:top="0dp" />
        </shape></item>

</selector>